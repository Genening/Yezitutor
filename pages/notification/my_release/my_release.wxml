<!--pages/notification/my_release/my_release.wxml-->
<view id='content'>
  <view>
    <i-panel title="基础用法">
    <i-input value="{{ name }}" name="name" title="姓名" autofocus placeholder="名字" />
    <i-input value="{{ position }}" name="position" type='textarea' title="地区" placeholder="请填入您所在地区" />
    <i-input value="{{ phone }}" name="phone" type="number" title="联系电话" placeholder="请输入手机号" />
    <i-input value="{{ wechat }}" name="wechat" type="textarea" title="微信号" placeholder="请输入您的微信号" />
    <i-input value="{{ introduction }}" name="introduction" type="textarea" title="个人简介" placeholder="请输入(最多50字)" maxlength="50" />
    <i-input value="{{ subject }}" name="subject" type='textarea' title="辅导年级/科目" placeholder='请输入意向年级/科目' />
    <i-input value="{{ salary }}" name="salary" type='number' title="意向时薪" placeholder='元/小时'/>
    <i-input value="{{ more }}" name="more" type="textarea" title="备注" placeholder="您的备注" maxlength="50" />
    <van-button type="info" size='large' bindtap='submit'>提交</van-button>
    </i-panel>
  </view>
</view>
