/* pages/home/home.wxss - 主页样式 */
#showcard{
  width:97%;
  height: 100px;
  background: #7fc5ff;
  border-radius: 5px;
  border: blanchedalmond;
  margin: 5px;
  border-bottom: 2px solid silver;
}

#board{
  width: 100%;
  height: 60px;
  border:none;
}

.btn{
  width: 50px;
  height: 30px;
  border-radius: 5px;
  border-bottom:2px solid silver;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 10px;
  margin: 26px;
  float: left;
}

.mescard{
  width: 100%;
  height: 150px;
  background:hsl(187, 91%, 48%);
  border-bottom: 1px solid silver;
  border-top: 1px solid silver;
  margin-bottom: 2px;
  margin-top: 1px;

}