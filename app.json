{
  "cloud": true,
  "description": "app.json - 小程序全局配置",
  "pages": [
    "pages/home/home",
    "pages/home/messeage_card/messeage_card",
    "pages/home/release/release",
    "pages/home/navigation/navigation",
    "pages/notification/notification",
    "pages/notification/my_release/my_release",
    "pages/notification/my_response/my_response",
    "pages/notification/update/update",
    "pages/about/about",
    "pages/about/privacyitems/privacyitems",
    "pages/about/feedback/feedback"
  ],
  "window": {
    "navigationBarBackgroundColor": "#80deea",
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "叶子家教",
    "margin": "auto",
    "navigationStyle": "default",
    "backgroundColor": "#f8f8f9",
    "backgroundTextStyle": "light",
    "backgroundColorTop": "#ffffff",
    "backgroundColorBottom": "#ffffff",
    "enablePullDownRefresh": true,
    "onReachBottomDistance": 50,
    "pageOrientation": "portrait",
    "frontsize": 15
  },
  "tabBar": {
    "color": "silver",
    "selectedColor": "#4bacb8",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "叶子",
        "iconPath": "res/ic/ic_tabBar_home_inactive.png",
        "selectedIconPath": "res/ic/ic_tabBar_home_selected.png"
      },
      {
        "pagePath": "pages/notification/notification",
        "text": "消息",
        "iconPath": "res/ic/ic_tabBar_notification_inactive.png",
        "selectedIconPath": "res/ic/ic_tabBar_notification_selected.png"
      },
      {
        "pagePath": "pages/about/about",
        "text": "我的",
        "iconPath": "/res/ic/ic_tabBar_about_inactive.png",
        "selectedIconPath": "/res/ic/ic_tabBar_about_selected.png"
      }
    ],
    "position": "bottom"
  },
  "usingComponents": {
    "i-button": "/dist/button/index",
    "i-card": "/dist/card/index",
    "i-input": "/dist/input/index",
    "van-search": "/vant-weapp/search/index",
    "van-button": "/vant-weapp/button/index",
    "i-tabs": "/dist/tabs/index",
    "i-tab": "/dist/tab/index",
    "van-nav-bar": "/vant-weapp/nav-bar/index",
    "i-cell-group": "/dist/cell-group/index",
    "i-cell": "/dist/cell/index",
    "i-avatar": "/dist/avatar/index",
    "van-card": "vant-weapp/card/index",
    "van-tag": "vant-weapp/tag/index"
  },
  "networkTimeout": {
    "request": 10000,
    "connectSocket": 20000,
    "uploadFile": 20000,
    "downloadFile": 20000
  },
  "sitemapLocation": "sitemap.json"
}